{
  "compilerOptions": {
    "target": "esnext",
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "removeComments": false,
    "preserveConstEnums": false,
    "sourceMap": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "lib": [
      "dom",
      "es2016"
    ]
  },
  "include": [
    "pages/**/*.ts",
    "pages/**/*.tsx"
  ],
  "exclude": [
    "pages/**/*.test.ts"
  ]
}
